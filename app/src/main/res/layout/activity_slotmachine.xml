<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/casinoimgforextra"
    tools:context="com.itsolution.ipay.slotmachine">


    <io.alterac.blurkit.BlurLayout
        android:id="@+id/imgs"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="130dp"
        app:blk_blurRadius="5"
        app:blk_cornerRadius="45dp"
        app:blk_downscaleFactor="0.12"
        app:blk_fps="20">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <ImageView
                android:id="@+id/img1"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/slot1" />

            <ImageView
                android:id="@+id/img2"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginLeft="15dp"

                android:layout_marginRight="15dp"
                android:src="@drawable/slot3" />

            <ImageView
                android:id="@+id/img3"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/slot2" />
        </LinearLayout>

    </io.alterac.blurkit.BlurLayout>


    <TextView
        android:id="@+id/msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:textColor="@color/white"
        android:layout_below="@id/imgs"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/msg"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="90dp"
        android:background="@drawable/btncasino"
        android:fontFamily="@font/bungee"
        android:text="Start"
        android:textColor="#36F4D7"
        android:textStyle="bold" />


</RelativeLayout>