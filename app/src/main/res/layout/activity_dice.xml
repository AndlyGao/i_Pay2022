<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/purple"
    tools:context="com.itsolution.ipay.Dice">




    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:src="@drawable/dice_1" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:background="@drawable/btncasino"
        android:padding="5dp"
        android:text="Roll"
        android:fontFamily="@font/bungee"
        android:textColor="#FFD606"
        android:textStyle="bold" />


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp">

        <TextView
            android:id="@+id/result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@color/gnt_blue"
            android:fontFamily="@font/bungee"
            android:padding="5dp"
            android:text="Number you have guess"
            android:textColor="@color/white"
            android:textSize="8sp" />

        <TextView
            android:id="@+id/result_view"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/result"
            android:background="@color/gnt_blue"
            android:fontFamily="@font/bungee"
            android:padding="5dp"
            android:text=""
            android:textColor="@color/white"
            android:textSize="8sp" />


        <TextView
            android:id="@+id/result_text"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:background="#ff9e36"
            android:fontFamily="@font/bungee"
            android:padding="5dp"
            android:text="Number yoy have guess"
            android:textColor="@color/white"
            android:textSize="8sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/button"
        android:id="@+id/allbutton">

        <LinearLayout
            android:id="@+id/linear_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="18dp"
            android:layout_marginEnd="18dp"
            android:layout_marginBottom="18dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/number1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext"
                android:clickable="true"
                android:minWidth="40dp"
                android:minHeight="30dp"
                android:text="1"
                android:textColor="#E91E63" />

            <Button
                android:id="@+id/number2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:background="@drawable/edittext"
                android:clickable="true"
                android:minWidth="40dp"
                android:minHeight="30dp"
                android:text="2"
                android:textColor="#E91E63" />

            <Button
                android:id="@+id/number3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:background="@drawable/edittext"
                android:clickable="true"
                android:minWidth="40dp"
                android:minHeight="30dp"
                android:text="3"
                android:textColor="#E91E63" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linear_layout"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="18dp"
            android:layout_marginEnd="18dp"
            android:clickable="true"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/number4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext"
                android:clickable="true"
                android:minWidth="40dp"
                android:minHeight="30dp"
                android:text="4"
                android:textColor="#E91E63" />

            <Button
                android:id="@+id/number5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:background="@drawable/edittext"
                android:clickable="true"
                android:minWidth="40dp"
                android:minHeight="30dp"
                android:text="5"
                android:textColor="#E91E63" />

            <Button
                android:id="@+id/number6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:background="@drawable/edittext"
                android:clickable="true"
                android:minWidth="40dp"
                android:minHeight="30dp"
                android:text="6"
                android:textColor="#E91E63" />


        </LinearLayout>


    </RelativeLayout>
</RelativeLayout>

