<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/blueblack"
    tools:context="com.itsolution.ipay.See_All">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tittle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/bungee"
        android:paddingLeft="15dp"
        android:text="Most Played GAMES"
        android:textColor="@color/white"
        android:layout_marginTop="20dp"
        android:textSize="20sp"
        android:textStyle="bold">
    </TextView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/all"
        android:layout_below="@+id/tittle">


        <ImageView
            android:id="@+id/i1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:src="@drawable/luckytumb" />

        <ImageView
            android:id="@+id/i2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/i1"
            android:padding="5dp"
            android:src="@drawable/slottumb" />
        <ImageView
            android:id="@+id/fortune"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/i2"
            android:padding="5dp"
            android:src="@drawable/fortunewheel" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tittle1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/bungee"
        android:paddingLeft="15dp"
        android:text="All Time Favourite "
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold">
    </TextView>

    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/all"
        android:layout_marginTop="5dp">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="5dp">

        <ImageView
            android:id="@+id/i3"
            android:src="@drawable/candytumb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/i4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:src="@drawable/hourlytumb" />
        <ImageView
            android:id="@+id/youtube"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:src="@drawable/youtubetumb" />

        <ImageView
            android:id="@+id/DICE_i1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:src="@drawable/dicetumb" />



    </LinearLayout>

    </HorizontalScrollView>



    <ImageView
        android:id="@+id/popMe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/all"
        android:padding="5dp"
        android:src="@drawable/lotterytumb"/>
    <ImageView
        android:id="@+id/refer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/popMe"
        android:padding="5dp"
        android:src="@drawable/refer"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/bungee"
        android:paddingLeft="15dp"
        android:text="Liked By User"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold">
    </TextView>


    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/all"
        android:layout_marginTop="5dp">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="5dp">



        <ImageView
            android:id="@+id/quiz"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/quiztumb" />
        <ImageView
            android:id="@+id/Browser1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:src="@drawable/browsertumb"/>

        <ImageView
            android:id="@+id/spacewar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:src="@drawable/spacewar" />
        <ImageView
            android:id="@+id/Browser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:src="@drawable/cell13casino2"/>

    </LinearLayout>
    </HorizontalScrollView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/bungee"
        android:paddingLeft="15dp"
        android:text="More Games"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold">
    </TextView>

    <ImageView
        android:id="@+id/dice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/i1"
        android:padding="5dp"
        android:src="@drawable/dicetumbnail" />
    <ImageView
        android:id="@+id/fishrun"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/youtube"
        android:padding="5dp"
        android:src="@drawable/fishtumb" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/bungee"
        android:paddingLeft="15dp"
        android:text="Casino Table"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold">
    </TextView>
    <ImageView
        android:id="@+id/cell38casino"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/i1"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:src="@drawable/cellcasino" />
    <ImageView
        android:id="@+id/cell13casino"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/i1"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/cell13casino"
        android:layout_marginBottom="10dp"/>
    <ImageView
        android:id="@+id/diamondmarket"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/i1"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/diamondmarket"
        android:layout_marginBottom="10dp"/>
    <ImageView
        android:id="@+id/hourlyreward"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/i1"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/hourlyreward"
        android:layout_marginBottom="10dp"/>
    <ImageView
        android:id="@+id/voucher"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/hourlyreward"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/vouchertumb"
        android:layout_marginBottom="10dp"/>

</LinearLayout>

</ScrollView>